<cu-custom bgColor="bg-red">
	<view slot="content">遇见更好的你们</view>
</cu-custom>

<view class="navver">
	<scroll-view class="bg-white nav text-center">
		<view class="cu-item {{0==currentTab?'text-red cur':''}}" bindtap="swichNav" data-current="0">
			动态
		</view>
		<view class="cu-item {{1==currentTab?'text-red cur':''}}" bindtap="swichNav" data-current="1">
			问答
		</view>
		<view class="cu-item {{2==currentTab?'text-red cur':''}}" bindtap="swichNav" data-current="2">
			热评
		</view>
	</scroll-view>
</view>


<view class="content">
	<swiper class="swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange">
		<swiper-item>
			<dynamic wx:if="{{currentTab=='0'}}"></dynamic>
		</swiper-item>
		<swiper-item>
			<qa wx:if="{{currentTab=='1'}}"></qa>
		</swiper-item>
		<swiper-item>
			<news wx:if="{{currentTab=='2'}}"></news>
		</swiper-item>
	</swiper>
</view>