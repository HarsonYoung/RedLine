<cu-custom bgColor="bg-white">
	<view slot="content">消息</view>
</cu-custom>

<!-- 消息集合 -->
<view class="solids-top cu-list grid col-{{gridCol}} no-border">
	<view class="cu-item" wx:for="{{iconList}}" wx:key wx:if="{{index<gridCol*2}}">
		<view class="cuIcon-{{item.icon}} text-{{item.color}}">
			<view class="cu-tag badge" wx:if="{{item.badge!=0}}">
				<block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
			</view>
		</view>
		<text>{{item.name}}</text>
	</view>
</view>

<view class="cu-list menu-avatar">
	<!-- 系统消息 -->
	<navigator hover-class='none' url="/pages/chats/single/single?title={{systemmessage.name}}&myurl={{myurl}}&friendurl={{systemmessage.url}}&icon={{systemmessage.icon}}&iconstyle={{systemmessage.iconstyle}}" class="cu-item solids-bottom">
		<!-- 头像 -->
		<view class="cu-avatar round lg cuIcon-{{systemmessage.icon}} {{systemmessage.iconstyle}}" style="background-image:url({{systemmessage.url}});"></view>
		<!-- 消息 -->
		<view class="content">
			<view class="text-grey">
				<text class="text-cut">{{systemmessage.name}}</text>
			</view>
			<view class="text-gray text-sm flex">
				<text class="text-cut">{{systemmessage.message}}</text>
			</view>
		</view>
		<!-- 信息 -->
		<view class="action">
			<view class="text-grey text-xs">{{systemmessage.finalTime}}</view>
			<view class="cu-tag round bg-red sm">{{systemmessage.unread}}</view>
		</view>
	</navigator>

	<!-- 普通消息 -->
	<navigator hover-class='none' url="/pages/chats/single/single?title={{item.name}}&myurl={{myurl}}&friendurl={{item.url}}&icon={{item.icon}}&iconstyle={{item.iconstyle}}" class="cu-item solids-bottom" wx:for="{{messageList}}" wx:key>
		<!-- 头像 -->
		<view class="cu-avatar round lg cuIcon-{{item.icon}} {{item.iconstyle}}" style="background-image:url({{item.url}});"></view>
		<!-- 消息 -->
		<view class="content">
			<view class="text-grey">
				<text class="text-cut">{{item.name}}</text>
			</view>
			<view class="text-gray text-sm flex">
				<text class="text-cut">{{item.message}}</text>
			</view>
		</view>
		<!-- 信息 -->
		<view class="action">
			<view class="text-grey text-xs">{{item.finalTime}}</view>
			<view class="cu-tag round bg-red sm">{{item.unread}}</view>
		</view>
	</navigator>
</view>

<view class='cu-tabbar-height'></view>